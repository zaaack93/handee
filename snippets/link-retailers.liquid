<div class="product-block product-block-link_ratialers w-full max-w-full">
{% if block.settings.block_heading %}
    <h3 class="font-heading" style="margin-bottom:{{block.settings.block_heading_space}}px">{{block.settings.block_heading}}</h3>
{% endif %}
<icon-links-slider>
<div class="content_icon_container">
    <div class="container-inner">
    {% for i in (1..4) %}
      {% assign link = 'image_heading_' | append: i%}
      {% assign image = 'image_link_' | append: i%}
      {% if block.settings[link] != blank or block.settings[image] != blank %}
          {% if block.settings[image] != blank %}
          <a href="{{block.settings[link]}}" {% if block.settings.open_on_new_tab %}target="_blank"{%endif%}>
              {{ block.settings[image] | image_url: width: auto | image_tag: loading: 'lazy' }}
          </a>
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>
</div>
<button class="scroll-button left-button"><svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 25 25" fill="none">
  <circle cx="12.495" cy="12.495" r="12.4952" transform="rotate(-180 12.495 12.495)" fill="#20375E"/>
  <path fill-rule="evenodd" clip-rule="evenodd" d="M14.8613 9.65511L12.0215 12.4949L14.8613 15.3348L13.9147 16.2814L10.1283 12.4949L13.9147 8.7085L14.8613 9.65511Z" fill="#E8EBEF"/>
  </svg>
</button>
<button class="scroll-button right-button"><svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 22 22" fill="none">
  <circle cx="11" cy="11" r="11" fill="#20375E"/>
  <path fill-rule="evenodd" clip-rule="evenodd" d="M8.91602 13.5002L11.416 11.0002L8.91602 8.50016L9.74935 7.66683L13.0827 11.0002L9.74935 14.3335L8.91602 13.5002Z" fill="#E8EBEF"/>
  </svg>
</button>
</icon-links-slider>
</div>