{%- comment -%}
  This is a required section for the Shopify Theme Store.
  It is available in the "Featured Collection" section in the theme editor.

  Theme Store required settings
  - Collection

  Theme Store optional settings
  - Heading: title of the featured collection section
{%- endcomment -%}
{%- liquid
  assign mobile_grid_cols = section.settings.products_per_row_mobile
  assign shape_id = section.id
  case section.settings.products_per_row_desktop
    when 2
      assign desktop_grid_cols = 'lg:grid-cols-2'
    when 3
      assign desktop_grid_cols = 'lg:grid-cols-3'
    when 4
      assign desktop_grid_cols = 'lg:grid-cols-4'
    when 5
      assign desktop_grid_cols = 'lg:grid-cols-5'
  endcase
  assign sort_by = collection.sort_by | default: collection.default_sort_by
  assign collection_banner_block = section.blocks | where: "type", "collection_banner"
  for block in collection_banner_block
    assign collection_banner = block
  endfor
-%}


{%- if section.settings.enable_quick_buy -%}
{%- unless request.design_mode -%}
<script src="{{ 'vendor-product.bundle.min.js' | asset_url }}" type="module"></script>
<script src="{{ 'product-quick-buy.js' | asset_url }}" type="module"></script>
{%- endunless -%}
{%- endif -%}

{%- render 'collection-shape-defs',
  shape: settings.product_tile_media_shape,
  section_id: section.id,
  item_count: section.settings.no_products
-%}

{%- paginate collection.products by section.settings.no_products -%}
<section class="relative grid text-scheme-text bg-scheme-background  {% if section.settings.use_gradient_background %}bg-scheme-gradient{% endif %} {% if collection.image != blank and collection_banner.settings.show_collection_image and collection_banner.settings.collection_image_style == 'full' %}full-bleed-section{% endif %}"
  data-color-scheme="{{ section.settings.color_scheme | default: 'primary' }}"
  x-data="ThemeSection_filterable('{{ section.id }}')">

  {%- if collection_banner_block.size > 0 -%}
    {%- render 'collection-banner' with
      show_collection_image: collection_banner.settings.show_collection_image,
      collection_image_style: collection_banner.settings.collection_image_style,
      crop: collection_banner.settings.crop,
      display_on_card: collection_banner.settings.display_on_card,
      show_collection_title: collection_banner.settings.show_collection_title,
      show_collection_description: collection_banner.settings.show_collection_description,
      linklist: collection_banner.settings.linklist
    -%}
  {%- endif -%}

  <div class="section-content relative z-10 px-section w-full max-w-site mx-auto pt-half-section-vertical-spacing  pb-section-vertical-spacing overflow-hidden" id="facets-filterable">

    {%- if section.settings.enable_filtering or section.settings.enable_sorting -%}
      <div class="pb-5 lg:pb-10 flex justify-between items-center gap-5">
        {%- if section.settings.enable_filtering -%}
          {%- liquid
            assign total_active_values = 0
            for filter in collection.filters
              assign total_active_values = total_active_values | plus: filter.active_values.size
              if filter.type == 'price_range'
                if filter.max_value.value or filter.min_value.value
                  assign total_active_values = total_active_values | plus: 1
                endif
              endif
            endfor
          -%}
          <button role="button"
            class="push-btn w-1/2 lg:w-auto"
            @click="$store.modals.open('filters')">
            <span class="push-btn-surface w-full lg:w-auto bg-scheme-secondary-background text-scheme-text shadow-secondary">{{ 'facets.filters.title_tags' | t }} {% if total_active_values > 0 %}({{ total_active_values }}){% endif %}</span>
          </button>
          <div class="hidden" id="facets-results-count">
            {%- if collection.products_count == 1 -%}
              {{ 'collections.general.items_with_count.one' | t: count: collection.products_count }}
            {%- else -%}
              {{ 'collections.general.items_with_count.other' | t: count: collection.products_count }}
            {%- endif -%}
          </div>
        {%- endif -%}
        {%- if section.settings.enable_sorting -%}
          <button role="button"
            class="push-btn w-1/2 lg:w-auto"
            @click="$store.modals.open('sort')">
            <span class="push-btn-surface w-full lg:w-auto bg-scheme-secondary-background text-scheme-text shadow-secondary">{{ 'facets.sorting.title' | t }}</span>
          </button>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="{% if settings.product_tiles_scatter %}py-4{% endif %}" id="facets-results">
      {%- if collection.products.size == 0 -%}
        <p class="text-center">{{ 'collections.general.no_matches' | t }}</p>
      {%- else -%}
        <ul class="grid gap-theme {% if mobile_grid_cols == '2' %}grid-cols-2{% else %}grid-cols-1{% endif %} {{ desktop_grid_cols }}">
        {%- for product in collection.products -%}
          <li class="">
            {%- liquid
              if settings.product_tiles_scatter
                capture class
                  case section.settings.products_per_row_mobile
                    when '2'
                    cycle 'max-lg:-translate-y-4 ', 'max-lg:translate-y-4 '
                  endcase
                  case section.settings.products_per_row_desktop
                    when 3
                      cycle 'lg:translate-y-4 ', 'lg:-translate-y-4 ', 'lg:translate-y-4 '
                    when 2 or 4
                      cycle 'lg:-translate-y-4 ', 'lg:translate-y-4 '
                    when 5
                      cycle 'lg:translate-y-4 ', 'lg:-translate-y-4 ', 'lg:translate-y-4 ', 'lg:-translate-y-4 ', 'lg:translate-y-4 '
                  endcase
                endcapture
              endif
              capture odd_even
                cycle 'odd', 'even'
              endcapture

              if settings.product_tile_media_shape == 'blob'
                assign shape_id = section.id | append: '-' | append: forloop.index0
              endif
            -%}
            {%- render 'product-tile'
              product: product,
              shape_id: shape_id,
              display_on_card: section.settings.display_on_card,
              class: class,
              odd_even: odd_even,
              index: forloop.index0,
              products_per_row_mobile: section.settings.products_per_row_mobile,
              enable_quick_buy: section.settings.enable_quick_buy
            -%}
          </li>
        {%- endfor -%}
        </ul>
      {%- endif -%}
    </div>

    {%- liquid
      if paginate.pages > 1
        render 'pagination', paginate: paginate, anchor: ''
      endif
      if section.settings.enable_filtering or section.settings.enable_sorting
        render 'filters', results: collection, enable_color_swatch_filters: section.settings.enable_color_swatch_filters, expand_filters: section.settings.expand_filters, show_filter_count: section.settings.show_filter_count
      endif
      if section.settings.enable_sorting
        render 'sort' with results: collection, sort_by: sort_by
      endif
    -%}

  </div>

  {%- liquid
    for block in section.blocks
      case block.type
        when 'background_shape'
          render 'block-background-shape' with block: block, section: section
        when 'background_pattern'
          render 'block-background-pattern' with block: block, section: section, scheme: section.settings.color_scheme
        when 'shape_divider'
          render 'block-shape-divider' with block: block, section: section
      endcase
    endfor
  -%}

</section>
{%- endpaginate -%}

{%- assign stickers = section.blocks | where: "type", "sticker" -%}
{%- liquid
  for sticker in stickers
    render 'block-sticker' with block: sticker, section: section
  endfor
-%}

